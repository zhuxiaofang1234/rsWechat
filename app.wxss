/**app.wxss**/
@import "weui.wxss";
page {
  width: 100%;
  height: 100%;
  background-color: #000;
  font-size: 18px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}
/***搜索区域****/
.search-area {
  padding: 20rpx;
}
.area-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.area-left {
  width: 250rpx;
  margin-right:10px;
}

.test-item.area-flex>.area-left {
  width:100rpx;
  margin-right:0;
}

.area-right {
  flex: 1;
}
/***************背景颜色*********************/
.bg-white {
  background-color: #fff;
}

.bg-blue {
  background-color: #1e9fff;
}

.bg-gray {
  background-color: #f7f7f7;
}

.bg-black {
  background-color: #000;
}

/****************文字颜色**************************/
.text-green{
   color: rgb(76, 217, 100);
}
.text-white{
  color:#fff;
}

.overflow {
  overflow: auto;
}

.hidden {
  overflow: hidden;
}

/*******************竖向固定区域*******************************/
.details-wrap {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.main {
  flex: 1; /**如果存在剩余空间元素会放大**/
  position: relative;
}

.main-wrapper {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.details-container{
  background-color: rgb(56,56,56);
  padding-left:30rpx;
}

.wt-items {
  padding: 32rpx 0;
  border-bottom: 1px solid #ddd;
}

.wt-items:last-child {
  border-bottom: 0;
}

.wt-title {
  color: #fff;
  display: inline-block;
  width: 270rpx;
  vertical-align: middle;
}

.wt-info {
  overflow: hidden;
  display: inline-block;
  text-overflow: ellipsis;
  white-space: nowrap;
  vertical-align: middle;
  width: 450rpx;
}

.footer {
  display: block;
  flex: 0 0 260rpx; /* 不放大不缩小固定100rpx */
}



button.rs-btn {
  color: rgb(0, 216, 255);
  border-color: rgb(0, 216, 255);
  background-color: transparent;
  display: inline-block;
  padding: 0;
  width: 300rpx;
  height: 94rpx;
  line-height: 94rpx;
  font-size: 36rpx;
  box-sizing: border-box;
}

.ml-50{
  margin-left:50rpx !important;
}
.mt-20{
  margin-top:20rpx !important;
}

/***返回按钮***/
.footer.backfooter {
  flex: 0 0 170rpx;
  text-align: center;
  margin-top:0;
}
.rs-btn.backbtn{
  margin-top:38rpx;
}

.mt-20{
  margin-top:20rpx !important;
}
