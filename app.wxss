/**app.wxss**/
@import "weui.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

.nav {
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
}

.nav-title {
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: left;
  position: absolute;
  bottom: 0;
  left: 20rpx;
  z-index: 10;
  font-family: PingFang-SC-Medium;
  font-size: 36rpx;
  letter-spacing: 1px;
}

.nav-title.rs-title {
  font-size: 48rpx;
  color: #fff;
  margin-left: 10rpx;
}

.nav .back {
  width: 22px;
  height: 22px;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 10px 15px;
}

.bg-white {
  background-color: #fff;
}

.bg-blue {
  background-color: #1e9fff;
}

.bg-gray {
  background-color: #f7f7f7;
}

.bg-black {
  background-color: #000;
}

.overflow {
  overflow: auto;
}

.hidden {
  overflow: hidden;
}

page {
  width: 100%;
  height: 100%;
  background-color: #000;
  font-size: 18px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.details-wrap {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.main {
  flex: 1; /**如果存在剩余空间元素会放大**/
  position: relative;
}

.main-wrapper {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin-top: 20rpx;
}
.details-container{
  background-color: rgb(56,56,56);
  padding-left:30rpx;
}

.wt-items {
  padding: 32rpx 0;
  border-bottom: 1px solid #ddd;
}

.wt-items:last-child {
  border-bottom: 0;
}

.wt-title {
  color: #fff;
  display: inline-block;
  width: 270rpx;
  vertical-align: middle;
}

.wt-info {
  overflow: hidden;
  display: inline-block;
  text-overflow: ellipsis;
  white-space: nowrap;
  vertical-align: middle;
  width: 450rpx;
}
.text-green{
   color: rgb(76, 217, 100);
}
.text-white{
  color:#fff;
}

.footer {
  display: block;
  flex: 0 0 260rpx; /* 不放大不缩小固定100rpx */
  margin-top: 20rpx;
}

.btn-wrap {
  padding: 30rpx 50rpx;
}

button.rs-btn {
  color: rgb(0, 216, 255);
  border-color: rgb(0, 216, 255);
  background-color: transparent;
  display: inline-block;
  padding: 0;
  width: 300rpx;
  height: 94rpx;
  line-height: 94rpx;
  font-size: 36rpx;
  box-sizing: border-box;
}

.btn-mr-50 {
  margin-right: 50rpx !important;
}

.btn-mb-20 {
  margin-bottom: 20rpx;
}
.mt-20{
  margin-top:20rpx !important;
}

/***返回按钮***/
.footer.backfooter {
  flex: 0 0 170rpx;
  text-align: center;
  margin-top:0;
}
.rs-btn.backbtn{
  margin-top:38rpx;
}
