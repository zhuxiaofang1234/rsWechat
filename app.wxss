/**app.wxss**/
@import "weui.wxss";

page {
  width: 100%;
  height: 100%;
  background-color: #383838;
  font-size: 18px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

/***搜索区域****/

.search-area {
  padding: 20rpx;
}

.area-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

.area-left {
  width: 250rpx;
  margin-right: 10px;
}

.area-right {
  flex: 1;
}

.test-item {
  background-color: #000;
  margin-bottom: 20rpx;
}

.test-item .test-number {
  background-color: #dfdfdf;
  font-size: 30rpx;
  width: 100rpx;
  justify-content: center;
  align-items: center;
}

.test-item:last-child {
  margin-bottom: 0;
}

.test-content {
  padding: 32rpx 30rpx;
  color: #fff;
  font-size: 36rpx;
}

.test-content .test-info {
  margin-top: 30rpx;
}

.test-way-info {
  display: inline-block;
  vertical-align: middle;
  color: #4cd964;
  width: 330rpx;
}

.testWay {
  margin-right: 20rpx;
}

.testStatus {
  display: inline-block;
  vertical-align: middle;
}

.testStatus.waitTest {
  color: #ff7e00;
}
.blue{
  color:#1e9fff;
  margin-right:2px;

}

/***************背景颜色*********************/

.bg-white {
  background-color: #fff;
}

.bg-blue {
  background-color: #1e9fff;
}

.bg-gray {
  background-color: #f7f7f7;
}

.bg-black {
  background-color: #000;
}

.bg-gray38{
  background-color: #383838 !important;
}

/****************文字颜色**************************/
.rs-inline{
  display: inline-block;
  vertical-align: middle;
}

.text-green {
  color: rgb(76, 217, 100);
}

.text-white {
  color: #fff;
}

.text-orange {
  color: #ff7e00 !important;
}
.text-red {
  color: #ff0000 !important;
}

.overflow {
  overflow: auto;
}

.hidden {
  overflow: hidden;
}

.tipStyles{
  font-size:24rpx;
}

/*******************竖向固定区域*******************************/

.details-wrap {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.main {
  flex: 1; /**如果存在剩余空间元素会放大**/
  position: relative;
}

.main-wrapper {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

.details-container {
  background-color: #000;
  padding-left: 30rpx;
}
.details-container.no-padding {
  padding-left: 0 !important;
}

.wt-items {
  padding: 32rpx 0;
  border-bottom: 1px solid #898989;
}

.wt-items:last-child {
  border-bottom: 0;
}

.wt-title {
  color: #fff;
  display: inline-block;
  width: 270rpx;
  vertical-align: middle;
}

.wt-info {
  overflow: hidden;
  display: inline-block;
  vertical-align: middle;
  width: 450rpx;
}

/*********按钮间距***********/

.ml-50 {
  margin-left: 50rpx !important;
}

.mr-50 {
  margin-right: 50rpx !important;
}

.mt-30 {
  margin-top: 30rpx !important;
}

.mt-20 {
  margin-top: 20rpx !important;
}
.mt-16{
   margin-top: 16rpx !important;
}

.mt-64 {
  margin-top: 64rpx !important;
}

.no-margin {
  margin: 0 !important;
}

.mb-32 {
  margin-bottom: 32rpx !important;
}
.mb-40{
  margin-bottom:40rpx !important;
}

/***返回按钮***/

button.rs-btn {
  color: rgb(0, 216, 255);
  border-color: rgb(0, 216, 255);
  background-color: transparent;
  display: inline-block;
  padding: 0;
  width: 300rpx;
  height: 94rpx;
  line-height: 94rpx;
  font-size: 36rpx;
  box-sizing: border-box;
}

button.rs-btn.btn-blue{
   color: rgb(0, 216, 255);
  border-color: rgb(0, 216, 255);
}

.button-hover{
  background-color: #555;

}

.footer {
  display: block;
  flex: 0 0 260rpx; /* 不放大不缩小固定100rpx */
}

.footer.backfooter {
  flex: 0 0 170rpx;
  text-align: center;
  margin-top: 0;
}

.rs-btn.backbtn {
  margin-top: 38rpx;
}

.rs-btn.btn-lg {
  width: 650rpx;
}

.rs-btn.btn-green {
  color: rgb(76, 217, 100);
  border-color: rgb(76, 217, 100);
}

.rs-btn.btn-orange {
  color: rgb(255, 126, 0);
  border-color: rgb(255, 126, 0);
}

.bottom-wrap {
  position: absolute;
  left: 50rpx;
  bottom: 50rpx;
}
/***列表底部***/
.data-loading {
  height: 60rpx;
  line-height: 60rpx;
  background-color: #eee;
  text-align: center;
  font-size: 14px;
}

/****/
.weui-cells:before {
  border-top: 1rpx solid #555;
}
.weui-cells:after {
  border-bottom: 1rpx solid #555;
}
.rs-title.weui-cells__title {
  font-size: 30rpx;
  color:#ddd;
}

.rs-text{
  color:#4cd964;
  font-size:36rpx;
}
.weui-select{
  border-right:none;
  color:#4cd964;
  font-size:36rpx;
}
.weui-cell_switch {
padding-top:8px;
padding-bottom:8px;
}

/***详情页面**/
.details-item{
  padding:20rpx 20rpx 20rpx 0;
  border-bottom:1rpx solid #898989;
}
.details-item:last-child{
  border-bottom:none;
}
.details-title{
  color:#ddd;
  font-size:30rpx;
}
.details-info{
  line-height: 1;
}

/***暂无数据**/
.noData-wrap {
  justify-content: center;
  align-items: flex-start;
}
.img-wrap{
  width:400rpx;
  height:300rpx;
}
.img-response{
  width:100%;
  height:100%;
  display: inline-block;
}
.error-tips{
  font-size:42rpx;
  margin-top:100rpx;
  text-align: center;
}
.tipsSyle{
  font-size:14px;
}

.noData-tip-content{
  margin-top:200rpx;
  text-align: center;
}

.login-tips{
  font-size:32rpx;
  margin-top:20rpx;
  margin-bottom:30rpx;
  text-align: center;
}
.rs-btn.gologinBtn{
  color: rgb(0, 216, 255);
  border-color: rgb(0, 216, 255);
  background-color: transparent;
  display: inline-block;
  padding: 0;
  width: 240rpx;
  height: 86rpx;
  line-height: 86rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

/***加载层***/
.loading-container{
  position:fixed;
  top:0;
  left:0;
  right:0;
  bottom:0;
  background-color: #373737;
  z-index:99;
  display: flex;
  justify-content: center;
}
.img-loading{
  width:750rpx;
  height:422rpx;
  margin-top:240rpx;
}

/**input框**/
.rs_input_wrap{
  padding:0 15rpx;
}
.rs-input{
  border: 1px solid #666;
  font-size:36rpx;
  line-height:36rpx;
  padding:26rpx 30rpx;
  border-radius:15rpx;
  background-color:#000; 
}
.rs_input_wrap.rs-inline{
  width:44%
}

/***列表样式***/

.plie-items{
  display: flex;
  margin-bottom:20rpx;
  background-color: #000;
}
.pile-order{
  flex:0 0 100rpx;
  height:50px;
  line-height: 50px;
  text-align: center;
  background-color:rgb(223,223,223);
}
.pile-no{
  flex:1;
  line-height: 50px;
  padding-left:50rpx;
  color:#4cd964
}

.content-number{
  flex: 0 0 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgb(223,223,223);
}
.content-info{
  flex:1;
  display: flex;
  align-items: center;
  padding-left: 50rpx;
  color: #4cd964;
}

.weui-check__label:active{
  background-color:#383838
  }

  /**搜索框的小箭头**/
  .selectContent{
    margin-left:6rpx;
    margin-right:30rpx;
    height:92rpx;
    line-height:92rpx;
  }
  .arrow_down{
    height:16rpx;
    width:25rpx;
    margin-left:20rpx;
    vertical-align: middle;
  }
  
  .selected-item{
    width:72rpx;
    display: inline-block;
    font-size:36rpx;
    color:#fff;
    vertical-align: middle;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
  }







