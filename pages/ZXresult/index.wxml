<form bindsubmit='reg'>
	<view class="details-wrap">
		<view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">{{erroInfo}}</view>
		<view class="main">
			<scroll-view class="main-wrapper" scroll-y style="height:100%">
				<view class="details-container has-padding bg-gray38">		
						<view class="weui-cells__title rs-title">混凝土芯样汇总描述
							<span class="blue">*</span>
						</view>
						<textarea class="rs-input rs-text otherDefact" name="pileXyDescribe" value="{{pileXyDescribe}}" auto-height="true"  placeholder="混凝土芯样情况描述" placeholder-class="tipStyles"></textarea>
            	<view class="weui-cells__title rs-title mt-20">岩层芯样汇总描述
							<span class="blue">*</span>
						</view>
						<textarea class="rs-input rs-text otherDefact" name="rockXyDescribe" value="{{rockXyDescribe}}" auto-height="true"  placeholder="岩层芯样汇总描述" placeholder-class="tipStyles"></textarea>
				</view>
			</scroll-view>
		</view>
		<!--弹出框结束-->
		<view class="footer backfooter">
			<button class="rs-btn btn-blue backbtn mr-50" plain="true" bindtap="cancel">取消</button>
			<button class="rs-btn backbtn btn-green" plain="true" form-type="submit">提交</button>
		</view>
	</view>
</form>