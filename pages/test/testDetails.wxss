/* pages/test/testDetails.wxss */
page{
  background-color: #000;
  font-size:18px;
  width:100%;
  height:100%;
}

.details-wrap{
  display: flex;
  flex-direction: column;
  width: 100%;
  height:100%;
}
.main{
  flex: 1;/**如果存在剩余空间元素会放大**/
  position: relative;
}
.main-wrapper {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin-top:20rpx;
  
}
.details-container{
  background-color: rgb(56,56,56);
  padding-left:30rpx;
}

.wt-items{ 
  padding:32rpx 0;
  border-bottom:1px solid #ddd;
}
.wt-items:last-child{
   border-bottom:0;
}
.wt-title{
  color:#fff;
  display: inline-block;
  width:270rpx;
  vertical-align: middle;
}
.wt-info{
    color:rgb(76,217,100);
    overflow: hidden;
    display: inline-block;
    text-overflow: ellipsis;
    white-space: nowrap;
    vertical-align: middle;
    width:450rpx;
}
.footer{
  display: block;
  flex: 0 0 260rpx; /* 不放大不缩小固定100rpx */
  margin-top:20rpx;
}
.btn-wrap{
  padding:30rpx 50rpx;
}

button.rs-btn {
  color:rgb(0,216,255);
  border-color:rgb(0,216,255);
  background-color:transparent;
  display: inline-block;
  padding:0;
  width:300rpx;
  height:94rpx;
  line-height: 94rpx;
  font-size:36rpx;
  box-sizing: border-box;
}
.btn-mr-50{
  margin-right:50rpx !important;
}
.btn-mb-20{
  margin-bottom:20rpx;
}



