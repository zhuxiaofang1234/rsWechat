<view class="details-wrap">
<view class="fixedArea">
  <button class="rs-btn testDataEnter" plain="true" bindtap="toAddTestPoint">新增测点</button>
</view>
  <view class="main mt-20">
    <scroll-view class="main-wrapper" scroll-y style="height:100%">
        <view class="plie-items" bindtap="toTestDataDetails" wx:for="{{pileList}}" wx:key="{{index}}" data-id="{{item.id}}">
          <view class="pile-order">{{index+1}}</view>
          <view class="pile-no">{{item.pileNo}}</view>
        </view>
    </scroll-view>
  </view>
</view>