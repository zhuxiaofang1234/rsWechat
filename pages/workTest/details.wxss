/* pages/workTest/details.wxss */
@import "../../Iconfont.wxss";
.mask{
  background-color: rgba(0,0,0,0.6);
  overflow: hidden;
  position: fixed;
  bottom:0;
  top:0;
  right:0;
  left:0;
  z-index:9;
}

.bottom-dialog{
  width:100%;
  background-color: #fff;
  position: fixed;
  bottom:0;
  left:0;
  right:0;
  z-index: 10;
}
.header-dialog{
  position:relative;
  padding:5rpx;
}

.header-dialog .close-icon{
  position:absolute;
  right:8px;
  top:2px;
  font-size:20px;
  padding:10rpx;
}
.body-dialog {
  padding:40rpx 0 30rpx 0;
}

.footer-dialog{
  text-align: center;
  border-top:4px solid #000;
}
.dialog-btn{
  color: rgb(76, 217, 100);
  letter-spacing: 4px;
  border-radius: 0;
  background-color: #383838;
}

.add-wrap {
  position: fixed;
  width: 104rpx;
  height: 104rpx;
  display: flex;
  justify-content: center;
  right: 30rpx;
  bottom: 80rpx;
}

.add-image {
  width: 98rpx;
  height: 98rpx;
  border-radius: 50%;
  display: inline-block;
  overflow: hidden;
}

.recordImgWrap{
  width:100%;
}
.recordImg{
  width:77px;
  height:77px;
  margin-right:10rpx;
}

.rs-btn.detailBtn {
  color: rgb(0, 216, 255);
  border-color: rgb(0, 216, 255);
  background-color: transparent;
  display: inline-block;
  padding: 0;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  box-sizing: border-box; 
  }