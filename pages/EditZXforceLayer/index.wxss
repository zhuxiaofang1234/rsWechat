/***滑动删除***/
.movable-area{
  width:100%;
  height:100rpx;
  background-color: #000;
  margin-bottom:10px;
}
.movable-view{
  width: 100%;
  height: 100%;
}

.touch-item {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100%;
  overflow: hidden
}
.content {
  width: 100%;
  display: flex;
  margin-right:0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px
}
.content-number{
  flex: 0 0 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgb(223,223,223);
}
.content-info{
  flex:1;
  display: flex;
  align-items: center;
  padding-left: 50rpx;
  color: #4cd964;
}
.del {
  background-color: orangered;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-move-active .content,
.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}



