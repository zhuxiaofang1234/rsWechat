<view class="details-wrap">
<view class="loading-container" hidden="{{loadingPage}}"><image src="../../images/loading.gif" class="img-loading"></image></view>
  <view class="main mt-20">
    <scroll-view class="main-wrapper" scroll-y style="height:100%">
      <block wx:if="{{pileList.length>0}}">
        <view class="plie-items" bindtap="toTestDataDetails" wx:for="{{pileList}}" wx:key="{{index}}" data-id="{{item.baseInfoId}}" data-pileId="{{item.pileId}}">
          <view class="pile-order">{{index+1}}</view>
          <view class="pile-no">{{item.pileNo}}</view>
        </view>
      </block>
      <block wx:else>
       <view style="color:#fff; height:100%;" class="noData-wrap weui-flex">
					<view style="margin-top:200rpx;">
						<view class="img-wrap">
							<image src="../../images/noData.png" class="img-response"></image>
						</view>
						<view class="error-tips">暂无记录</view>
					</view>
				</view>
      </block>
    </scroll-view>
  </view>
</view>